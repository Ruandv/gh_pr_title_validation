{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "src",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist", 
    },
    "exclude": ["node_modules", "bin", "**/__mocks__*", "**/*.spec.**", "test", "assets"],
    "include": ["src/**/*.ts"]
}
